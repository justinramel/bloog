<!DOCTYPE html>
<html>
<head>
  <title>Bloog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="container">
  <div class="banner sixteen columns clearfix">
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
  </div>
</div>

<%= yield %>

<div class="sidebar two columns">
  <nav>
    <ul>
      <li><%= link_to "New post...", new_post_path %></li>
    </ul>
  </nav>
</div>

</body>
</html>
